# Configuración del Gateway
PORT=3000
NODE_ENV=development

# URLs de servicios backend
ADMIN_SERVICE_URL=http://localhost:3001
MEDICO_SERVICE_URL=http://localhost:3100

# URL del frontend (para CORS)
FRONTEND_URL=http://localhost:3003

# Configuración HTTP y resiliencia
HTTP_TIMEOUT_MS=5000
RESILIENCE_ENABLED=true
RETRY_ENABLED=true
RETRY_MAX_ATTEMPTS=2
RETRY_BASE_DELAY_MS=250
CB_WINDOW_MS=30000
CB_THRESHOLD_PERCENT=30
CB_HALF_OPEN_AFTER_MS=20000

# Configuración de JWT (si es necesaria)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h
